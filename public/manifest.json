{
    "manifest_version": 3,
    "version": "1.0",
    "name": "WebQuote Pilot",
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": ["<all_urls>"],
    "icons": {
        "32": "icon.png"
    }
}